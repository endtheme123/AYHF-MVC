@model List<Product>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Create new category <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>



    <table id="tblData" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Name</th>
        
        <th>Price</th>
        <th>Stock</th>
        <th>Ordered</th>
        <th></th>
    </tr>

    </thead>
    

</table>


</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}